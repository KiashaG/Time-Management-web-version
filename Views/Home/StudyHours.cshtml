@model PROG6212POE.Models.StudyHoursInfo
@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>STUDY HOURS INFORMATION</h4>
        <p>Add study hour information to view self study hours on the summary page</p>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Module_Studied, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Module_Studied, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Number_of_credits, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Number_of_credits, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Class_hours_per_week, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Class_hours_per_week, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_Studied, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Date_Studied, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Number_of_weeks, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Number_of_weeks, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>

    <div class="form-group">
        <input type="submit" value="Calculate" class="btn btn-info" />
    </div>

    <div>
        <a href=@Url.Action("Module", "Home")>Back</a>
    </div>

    <div>
        <a href=@Url.Action("Summary", "Home")>Next</a>

    </div>


}


